@model IEnumerable<FinalTest1.Models.Entidades.Animal>

@{
    ViewBag.Title = "_ListAnimal";
}

<h2>_ListAnimal</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.raza.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tamanio.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.caracteristicas)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.raza.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tamanio.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.caracteristicas)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
